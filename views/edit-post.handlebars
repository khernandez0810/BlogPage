<div class="post card">
  <div class="card-header">
    <h2>Edit Blog</h2>
  </div>
  <form id="edit-blog-form" class="card-body">
    <input type="hidden" id="blog-id" value="{{blog.id}}" />

    <label class="form-label" for="blog-title">Title</label>
    <input type="text" id="blog-title" value="{{blog.title}}" class="form-input" />

    <label class="form-label" for="blog-content">Content</label>
    <textarea id="blog-content" class="form-input">{{blog.blog_content}}</textarea>

    <button type="submit" class="btn">Update</button>

    <button type="button" id="delete-btn" class="btn">Delete</button>
  </form>
  <script src="/js/postHandle.js"></script>
</div>
