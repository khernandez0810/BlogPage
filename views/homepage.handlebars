<!-- Loop over each object in the projects array -->
<div class="flex flex-col">
  {{#if blogs.length}}
  <h1 class="text-center text-4xl pb-6">Blog Posts: </h1>
{{#each blogs as |blog| }}

<div class="row mb-4 project border-solid border-4 ">
  <div class="col-md-5">
    <div class="text-3xl text-dark w-full border-bottom-4 border-solid border-2">
    <h2>{{blog.title}}</h2>
    </div>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/blogs/{{blog.id}}">{{blog.title}}</a>
    </h2>
    <p>{{blog.blog_content}}</p>
    <p>Created by: {{blog.user.username}} on {{format_date blog.createdAt}}</p>
        <p>
      {{comment.comment_content}}
    </p>
  </div>
</div>

{{/each}}
{{/if}}
</div>
