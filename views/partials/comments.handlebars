
{{#if blog.comments}}
<div class="card">
    <div class="card-header">
        <h2>Comments:</h2>
    </div>
<div class="card-body">
    {{#each blog.comments as |comment|}}
    <div>
    <p class="py-2 px-4">{{comment.user.username}} says:  {{comment.commentText}}</p>
    <p class="py-2 px-4">Posted on: {{format_date comment.createdAt}}</p>
    </div>
    {{/each}}
</div>
</div>
{{/if}}